    "total_point = 0\n",
    "point_count = 0\n",
    "\n",
    "while True:\n",
    "    point = int(input(\"点数を入力してください:\"))\n",
    "    \n",
    "    if point == -1:\n",
    "        break\n",
    "    total_point += point\n",
    "    point_count += 1\n",
    "    \n",
    "ava = total_point / point_count\n",
    "print(point_count, \"人のテストの平均点は\", ava, \"点です\")"
   ]
